<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
	#parse("common/common.vm")
	#parse("common/select.vm")
	#parse("common/errorUtils.vm")
	#parse("common/checkbox.vm")
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/css/admin-all.css" />
	<link rel="stylesheet" type="text/css" href="/css/doubleDate.css" />
    <script type="text/javascript" src="/js/jquery-1.7.2.js"></script>
    <script type="text/javascript" src="/js/jquery-ui-1.8.22.custom.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/ui-lightness/jquery-ui-1.8.22.custom.css" />
    <script type="text/javascript" src="/js/tip.js"></script>
	<script type="text/javascript" src="/js/doubleDate2.0.js"></script>
	<script type="text/javascript" src="/js/datepicker/WdatePicker.js"></script>
</head>
<body>
	$!errorMsg
	 <div class="alert alert-info">当前位置<b class="tip"></b>价格管理<b class="tip"></b>商品调价</div>
	<form id="form" action="itemPriceEdit.do" method="post"  >
		<input type="hidden" name="itemSupplyId" value="$!itemSupply.id" />
		<input type="hidden" name="itemId" value="$!item.id" />
	    <table class="table table-striped table-bordered table-condensed list">
	        <thead>
	            <tr>
	                <td colspan="4"><b>供货商品信息</b></td>
	            </tr>
	        </thead>
	        <tbody>
	            <tr>
	                <td width="100">商品名称</td>
	                <td width="">
	                   $!item.itemName
					</td>
	                <td width="100">供货商</td>
	                <td width="">
						 $!itemSupply.supplyTraderName
					</td>
	            </tr>
	            <tr>
		            <td width="100">面值</td>
	                <td width="">
						<input disabled="disabled"  type="text" size="20" value="$!item.getPriceDesc($!item.itemFacePrice)">元
					</td>
					<td width="100">省域</td>
	                <td width="">
					   $!item.itemSalesAreaDesc
	                </td>
	            </tr>
	            <tr>
	                <td width="100">成本折扣</td>
	                <td width="">
						<input type="text" name="itemCostPriceDiscount" size="20" value="$!oldItemPrice.itemCostPriceDiscount">%
						#getErrorMessage($errorList,"itemCostPriceDiscount")
					</td>	
	                <td width="100">价格1折扣</td>
	                <td width="">
						<input  type="text" name="itemSalesPriceDiscount" size="20" value="$!oldItemPrice.itemSalesPriceDiscount">%
						#getErrorMessage($errorList,"itemSalesPriceDiscount")
					</td>	
	            </tr>
	            <tr>
	                <td width="100">价格2折扣</td>
	                <td width="">
						<input type="text" name="itemSalesPrice2Discount" size="20" value="$!oldItemPrice.itemSalesPrice2Discount">%
						#getErrorMessage($errorList,"itemSalesPrice2Discount")
					</td>	
	                <td width="100">价格3折扣</td>
	                <td width="">
						<input type="text" name="itemSalesPrice3Discount" size="20" value="$!oldItemPrice.itemSalesPrice3Discount">%
						#getErrorMessage($errorList,"itemSalesPrice3Discount")
					</td>
	            </tr>
	            <tr>
	                <td width="100">价格4折扣</td>
	                <td width="">
						<input type="text" name="itemSalesPrice4Discount" size="20" value="$!oldItemPrice.itemSalesPrice4Discount">%
						#getErrorMessage($errorList,"itemSalesPrice4Discount")
					</td>
	                <td width="100">单买折扣</td>
	                <td width="">
						<input type="text" name="itemDummyPriceDiscount" size="20" value="$!oldItemPrice.itemDummyPriceDiscount">%
						#getErrorMessage($errorList,"itemDummyPriceDiscount")
					</td>
	            </tr>
	            <tr>
	                <td width="100">生效时间</td>
	                <td width="">
							#select($!commitTypeList,"commitType",$!itemPriceForm.commitType) #getErrorMessage($errorList,"commitType") #getErrorMessage($errorList,"commitTime")
							<span id="commitDateDiv" class="input-append" style="display:none">
								<input class="Wdate" type="text" name="commitTime" value="$!dateTool.format("yyyy-MM-dd HH:mm:ss", $!itemPriceForm.commitTime)" onClick="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss'})" />
	                        </span>						
					</td>
	                <td width="100"></td>
	                <td width=""></td>
	            </tr>
	        </tbody>
	        <tfoot>
	            <tr>
	                <td colspan="4">
	                    <input class="btn btn-inverse" id="find" type="submit" value="修改" />
	                    <input class="btn btn-inverse" type="button" onclick="javascript: history.go(-1)" value="取消" />
					</td>
	            </tr>
	        </tfoot>		
	    </table>
	</form>	
	<script>
	jQuery(document).ready(function(){
	 if(jQuery('#commitType').val()==2){
	 	jQuery("#commitDateDiv").show();
	 }
	 jQuery('#commitType').bind('change',function(){
	      if(this.value==2){
	      	jQuery("#commitDateDiv").show();
	      }else{
		    jQuery("#commitDateDiv").hide();
		  }
	 });
	 }
	);
	</script>
</body>
</html>
