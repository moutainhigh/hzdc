<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
	#parse("common/common.vm")
	#parse("common/select.vm")
	#parse("common/errorUtils.vm")
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/css/admin-all.css" />
	<link rel="stylesheet" type="text/css" href="/css/doubleDate.css" />
    <script type="text/javascript" src="/js/jquery-1.7.2.js"></script>
    <script type="text/javascript" src="/js/jquery-ui-1.8.22.custom.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/ui-lightness/jquery-ui-1.8.22.custom.css" />
    <script type="text/javascript" src="/js/tip.js"></script>
</head>
<body>
    <div></div>
    <div class="alert alert-info">当前位置<b class="tip"></b>短信发送<b class="tip"></b>输入短信</div>
	<form id="form" action="manualSend.do?type=postText" method="post" onsubmit="return submitCheck();">
		<table class="table table-striped table-bordered table-condensed">
			<tr>
				<td align="right">商品编号：</td>
				<td><input type="text" id="itemId" name="itemId" size="20" value="$!textSmdForm.itemId">#getErrorMessage($errorList,"itemId")</td>
			</tr>
			<tr>
				<td align="right">手机：</td>
				<td><textarea rows="8" cols="60" id="mobiles" name="mobiles">$!textSmdForm.mobiles</textarea><p>多个手机号，用英文字符逗号隔开</p></td>
			</tr>
			<tr>
				<td align="right">内容：</td>
				<td><textarea rows="5" cols="12" id="texts" name="texts">$!textSmdForm.texts</textarea><p>总共70个字内</p></td>
			</tr>
			<tr>
				<td align="right"></td>
				<td><font color="#FF0000">$!errorMsg</font></td>
			</tr>
			<tr>
				<td>&nbsp;</td>
				<td><input id="smsSubmit" class="btn btn-inverse" type="submit" value="确认发送" /></td>
			</tr>
		</table>
	</form>
    <script type="text/javascript">
		function submitCheck(){
			if($("#itemId").val().length == 0){
                alert("请输入商品编号");
                return false;
            }
			if($("#mobiles").val().length == 0){
                alert("请输入充值手机");
                return false;
            }
			if($("#texts").val().length == 0){
                alert("请输入短信内容");
                return false;
            }
            if($("#texts").val().length >= 70){
                alert("短信内容70个字内");
                return false;
            }
			return true;
		}
	</script>
</body>
</html>